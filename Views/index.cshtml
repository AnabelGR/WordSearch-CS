@{
  Layout="Shared/_Layout.cshtml";
}
<div class="panel">
  <div class="panel-body">
    <form class="form-horizontal" action="/" method="post">
      <div class="form-group">
        <label class="col-md-4" for="userSentence">Enter a sentence:</label>
        <div class="col-md-8">
        <input class="form-control" name="userSentence" type="text">
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-4" for="matchWord">Search for the word:</label>
        <div class="col-md-8">
        <input class="form-control" name="matchWord" type="text">
        </div>
      </div>
      <div class="form-actions">
        <button class="btn btn-success" type="submit">Find</button>
      </div>
    </form>
  </div>
</div>
