@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Find words in your sentence</h1>

<form class="form-horizontal" action="/" method="post">
  <div class="form-group">
    <label class="col-md-2" for="userSentence">Enter a sentence:</label>
    <div class="col-md-6">
    <input class="form-control" name="userSentence" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="matchWord">Search for the word:</label>
    <div class="col-md-6">
    <input class="form-control" name="matchWord" type="text">
    </div>
  </div>
  <button class="btn btn-info" type="submit" name="button">Find</button>
</form>
